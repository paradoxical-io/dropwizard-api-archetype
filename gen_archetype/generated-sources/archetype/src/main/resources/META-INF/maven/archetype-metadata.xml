<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="appname"
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <fileSets>
    <fileSet encoding="UTF-8" filtered="true">
      <directory>scripts</directory>
      <includes>
        <include>**/*.sh</include>
      </includes>
    </fileSet>
    <fileSet encoding="UTF-8" filtered="true">
      <directory></directory>
      <includes>
        <include>.gitignore</include>
        <include>.travis.yml</include>
        <include>deploy.sh</include>
        <include>perform-release.sh</include>
        <include>prep-release.sh</include>
        <include>README.md</include>
        <include>rollback-release.sh</include>
      </includes>
    </fileSet>
  </fileSets>
  <modules>
    <module id="${rootArtifactId}-core" dir="api" name="${rootArtifactId}-core">
      <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/main/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/test/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory>docker/data</directory>
          <includes>
            <include>**/*.</include>
            <include>**/*.yml</include>
            <include>**/bin/service</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8" filtered="true">
          <directory>docker</directory>
          <includes>
            <include>**/*.</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
          <directory></directory>
          <includes>
            <include>dependency-reduced-pom.xml</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory></directory>
          <includes>
            <include>appname-core.iml</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
    <module id="${rootArtifactId}-public" dir="public" name="${rootArtifactId}-public">
      <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
          <directory>src/main/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
          <directory>src/test/java</directory>
          <includes>
            <include>**/*.java</include>
          </includes>
        </fileSet>
        <fileSet encoding="UTF-8">
          <directory></directory>
          <includes>
            <include>appname-public.iml</include>
          </includes>
        </fileSet>
      </fileSets>
    </module>
  </modules>
  <requiredProperties>
    <requiredProperty key="git_url">
      <defaultValue>git@github.com:group/project.git</defaultValue>
    </requiredProperty>
  </requiredProperties>
</archetype-descriptor>
