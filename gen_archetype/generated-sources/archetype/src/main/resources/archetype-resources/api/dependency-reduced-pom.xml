#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>${parentArtifactId}</artifactId>
    <groupId>${groupId}</groupId>
    <version>${version}</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>${parentArtifactId}-core</artifactId>
  <name>Service Core</name>
  <prerequisites>
    <maven>3.0.0</maven>
  </prerequisites>
  <build>
    <finalName>${symbol_dollar}{project.artifactId}-${symbol_dollar}{project.version}-r${symbol_dollar}{buildNumber}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${symbol_dollar}{maven.shade.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <createDependencyReducedPom>true</createDependencyReducedPom>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>${package}.ServiceApplication</mainClass>
                  <manifestEntries>
                    <SCM-Revision>${symbol_dollar}{buildNumber}</SCM-Revision>
                    <SCM-Branch>${symbol_dollar}{scmBranch}</SCM-Branch>
                  </manifestEntries>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>${symbol_dollar}{maven.source.plugin.version}</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.spotify</groupId>
        <artifactId>docker-maven-plugin</artifactId>
        <configuration>
          <imageName>${symbol_dollar}{dockerRepo}/${parentArtifactId}:${symbol_dollar}{buildNumber}</imageName>
          <dockerDirectory>${symbol_dollar}{project.basedir}/docker</dockerDirectory>
          <resources>
            <resource>
              <targetPath>/data/lib</targetPath>
              <directory>${symbol_dollar}{project.build.directory}</directory>
              <include>${symbol_dollar}{project.build.finalName}.jar</include>
            </resource>
          </resources>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>oss.sonatype.org</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>uk.co.jemos.podam</groupId>
      <artifactId>podam</artifactId>
      <version>5.4.0.RELEASE</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>jcip-annotations</artifactId>
          <groupId>net.jcip</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jsr250-api</artifactId>
          <groupId>javax.annotation</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jbehave-core</artifactId>
          <groupId>org.jbehave</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jbehave-core</artifactId>
          <groupId>org.jbehave</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jbehave-site-resources</artifactId>
          <groupId>org.jbehave.site</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jbehave-junit-runner</artifactId>
          <groupId>de.codecentric</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>io.paradoxical</groupId>
      <artifactId>common.test</artifactId>
      <version>1.0</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>slf4j-log4j12</artifactId>
          <groupId>org.slf4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>log4j-over-slf4j</artifactId>
          <groupId>org.slf4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>hibernate-validator</artifactId>
          <groupId>org.hibernate</groupId>
        </exclusion>
        <exclusion>
          <artifactId>dropwizard-client</artifactId>
          <groupId>io.dropwizard</groupId>
        </exclusion>
        <exclusion>
          <artifactId>commons-io</artifactId>
          <groupId>commons-io</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>1.16.8</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.assertj</groupId>
      <artifactId>assertj-core</artifactId>
      <version>3.3.0</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>

